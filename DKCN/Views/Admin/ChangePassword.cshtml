@model ChangePasswordAdminViewModel
@{

    Layout = "_LayoutAdmin";
}

<div class="row">
    <div class="col-8">
        <nav aria-label="breadcrum">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a asp-controller="Admin" asp-action="ChungNhanIndex">Admin</a>
                </li>

                <li class="breadcrumb-item active font-weight-bolder" aria-current="page">
                    Thay Đổi Mật Khẩu
                </li>
            </ol>
        </nav>
    </div>
    <div class="col-4 d-flex justify-content-end">
        <input type="button" class="btn btn-design  w-100 me-2"
               value="Quay Lại Trang Chủ"
               onclick="location.href='@Url.Action("ChungNhanIndex", "Admin")'">
    </div>
</div>
<div class="p-4 border rounded">
    <div class="row">
        <div class="col-md-6">
            <form method="post" asp-action="ChangePassword">
                <div class="form-group">
                    <label class="text-primary" asp-for="CurrentPassword"> <i class="fa-solid fa-user"></i>&nbsp;Mật khẩu hiện tại:</label>
                    <div class="input-affix d-block">
                        <input type="password" asp-for="CurrentPassword" class="form-control">
                    </div>
                    <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="text-primary" asp-for="NewPassword"><i class="fa-solid fa-lock"></i>&nbsp;Mật khẩu mới</label>
                    <div class="input-affix m-b-10 d-block">
                        <input asp-for="NewPassword" type="password" class="form-control">
                    </div>
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="text-primary" asp-for="PasswordConfirm"><i class="fa-solid fa-lock"></i>&nbsp;Xác nhận mật khẩu mới:</label>
                    <div class="input-affix m-b-10 d-block">
                        <input asp-for="PasswordConfirm" type="password" class="form-control">
                    </div>
                    <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="d-flex align-items-center justify-content-between">
                        <button class="btn btn-primary w-100" type="submit">ĐỔI MẬT KHẨU</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>