@model ResetPasswordViewModel
@{
    Layout = "_LayoutAdmin";
}

<div class="row">
    <div class="col-8">
        <nav aria-label="breadcrum">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a asp-controller="Admin" asp-action="ChungNhanIndex">Admin</a>
                </li>
             
                <li class="breadcrumb-item active font-weight-bolder" aria-current="page">
                    Khôi Phục Mật Khẩu
                </li>
            </ol>
        </nav>
    </div>
    <div class="col-4 d-flex justify-content-end">
        <input type="button" class="btn btn-design  w-100 me-2"
               value="Quay Lại Trang Chủ"
               onclick="location.href='@Url.Action("ChungNhanIndex", "Admin")'">
    </div>
</div>
<div class="p-4 border rounded">
    <div class="row">
        <div class="col-md-6">
            <form method="post" asp-controller="Admin" asp-action="ResetPassword">
                <div class="form-group">
                    <label class="form-label text-primary mt-2" asp-for="Email"> <i class="fa-solid fa-user"></i>&nbsp;Tên tài khoản:</label>
                    <div class="input-affix d-block">
                        <input asp-for="Email" class="form-control">
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="form-label text-primary mt-2" asp-for="Password"><i class="fa-solid fa-lock"></i>&nbsp;Mật khẩu:</label>
                    <div class="input-affix m-b-10 d-block">
                        <input asp-for="Password" type="password" class="form-control">
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="form-label text-primary mt-2" asp-for="ConfirmPassword"><i class="fa-solid fa-lock"></i>&nbsp;Xác nhận mật khẩu:</label>
                    <div class="input-affix m-b-10 d-block">
                        <input asp-for="ConfirmPassword" type="password" class="form-control">
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success w-100 me-4">Khôi Phục</button>
                </div>
            </form>
        </div>
    </div>
</div>